        <option>
            <name>TEST_USER_PREFERENCE</name>
            <description>some test option</description>
            <defaultValue>default</defaultValue>
            <dataType>Text</dataType>
            <group>test</group>
        </option>

        <feature>
            <name>LIST_REPORTS</name>
            <description>allows user to list available reports</description>
            <group>reporting</group>
        </feature>
        <feature>
            <name>MODIFY_SCOPE_REPORT</name>
            <description>allows user to modify scope shared reports within the current user context/scope</description>
            <group>reporting</group>
        </feature>
        <feature>
            <name>MODIFY_PUBLIC_REPORT</name>
            <description>allows user to modify global shared reports within the current user context/scope</description>
            <group>reporting</group>
        </feature>
        <feature>
            <name>SHARE_REPORT_SCOPE</name>
            <description>allows user to share reports within current user context/scope</description>
            <group>reporting</group>
        </feature>
        <feature>
            <name>SHARE_REPORT_PUBLIC</name>
            <description>allows user to share reports globally</description>
            <group>reporting</group>
        </feature>
        <feature>
            <name>CREATE_REPORT</name>
            <description>allows user to create report</description>
            <group>reporting</group>
        </feature>
        <feature>
            <name>DELETE_SCOPE_REPORT</name>
            <description>allows user to delete scope shared reports, of which he is not the owner</description>
            <group>reporting</group>
        </feature>
        <feature>
            <name>DELETE_PUBLIC_REPORT</name>
            <description>allows user to delete PUBLIC shared reports, of which he is not the owner</description>
            <group>reporting</group>
        </feature>
        <dataset>
            <name>dataset_name</name>
            <description>dataset_desc</description>
            <category>dataset_cat</category>
            <discriminator>dataset_disc</discriminator>
        </dataset>
    </application>
</ns2:deployApplicationRequest>